<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_work_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!--<include
        android:id="@+id/header_view"
        layout="@layout/header_activity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_labelmax" />-->

    <TextView
        android:id="@+id/age_titlesubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_view"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="@dimen/text_labelmed"
        android:text="@string/message_topic"
        android:textColor="@color/white"
        android:textSize="@dimen/text_labelmin"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/age_titlesubject"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/choose_work_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age_titlesubject"
        android:layout_marginTop="@dimen/text_labellow"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/choose_work_rate_title"
        android:layout_toLeftOf="@+id/choose_work_rate_title"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="@dimen/text_labelmax"
        android:text="@string/chooose_work_profile"
        android:textColor="@color/white"
        android:textSize="@dimen/text_labelmin" />

    <TextView
        android:id="@+id/choose_work_rate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age_titlesubject"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/text_labellow"
        android:layout_marginRight="@dimen/text_labelmed"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="@dimen/text_labelmax"
        android:textColor="@color/white"
        android:textSize="@dimen/text_labelmin"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/age_title_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_labelmin"
        android:layout_below="@+id/choose_work_title">

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="@dimen/text_labelmax"
            android:layout_height="@dimen/text_labelmax"
            android:layout_gravity="center"
            android:background="@drawable/call_round"
            android:gravity="center"
            android:padding="@dimen/text_labellow"
            android:src="@drawable/home"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/age_title_txt"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/user_img"
            android:paddingLeft="@dimen/text_labelmin"
            android:paddingRight="@dimen/text_labelmin"
            android:text="@string/message_choose_work_profile"
            android:textColor="@color/hint"
            android:textSize="@dimen/text_labelmin" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/choose_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age_title_lay"
        android:background="@drawable/layout_round">

        <TextView
            android:id="@+id/choose_profile_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_labelsml"
            android:paddingLeft="@dimen/text_labelmin"
            android:paddingRight="@dimen/text_labelmin"
            android:text="Your Profile"
            android:textColor="@color/hint"
            android:textSize="@dimen/text_labelmin" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/choose_profile_txt"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/selected_profile_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_margin="@dimen/text_labelsml"
            android:paddingLeft="@dimen/text_labelmin"
            android:paddingRight="@dimen/text_labelmin"
            android:textColor="@color/hint"
            android:textSize="@dimen/text_labelmin" />

    </RelativeLayout>

    <TextView
        android:id="@+id/select_profile_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_layout"
        android:layout_margin="@dimen/text_labelsml"
        android:paddingLeft="@dimen/text_labelmin"
        android:paddingRight="@dimen/text_labelmin"
        android:layout_alignParentRight="true"
        android:background="@drawable/table_border"
        android:text="Select Profile"
        android:textColor="@color/hint"
        android:textSize="@dimen/text_labelmin" />

    <LinearLayout
        android:id="@+id/pre_post_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/text_labelmed"
        android:layout_marginLeft="@dimen/text_labelmed"
        android:layout_toLeftOf="@+id/call_query"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/per_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/text_labelsml"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            android:gravity="center"
            android:text="Previous"
            android:textColor="@color/black"
            android:textSize="@dimen/text_labelmin" />

        <TextView
            android:id="@+id/nxt_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/text_labelsml"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            android:gravity="center"
            android:text="Next"
            android:textColor="@color/black"
            android:textSize="@dimen/text_labelmin" />

    </LinearLayout>

    <ImageView
        android:id="@+id/call_query"
        android:layout_width="@dimen/text_labelmax"
        android:layout_height="@dimen/text_labelmax"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:layout_marginRight="@dimen/text_labelmed"
        android:layout_marginBottom="@dimen/text_labelmed"
        android:background="@drawable/call_round"
        android:padding="@dimen/text_labelsml"
        android:src="@drawable/phone_call"
        android:tint="@color/white" />

</RelativeLayout>